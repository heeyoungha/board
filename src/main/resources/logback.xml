<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">
    <!-- appender : 어디로 출력할지 설정-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy:MM:dd HH:mm:ss.SSS} %-5level --- [%thread] %logger{35} : %msg %n</pattern>
        </encoder>
    </appender>

    <!-- appender : 어디로 출력할지 설정-->
    <appender name="SLACK" class="com.github.maricn.logback.SlackAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                [%thread] %-5level %n%msg%n
            </pattern>
        </layout>
        <webhookUri>https://hooks.slack.com/services/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</webhookUri>
        <username>hee</username>
        <channel>study</channel>
        <iconEmoji>:bell:</iconEmoji>
        <colorCoding>true</colorCoding>
    </appender>

<!--    로그 메시지 전달, 특정 클래스에 특정 레벨 이상인 것에 대해 출력-->
    <logger name="board.study.StudyService" level="info" additivity="true">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SLACK" />
    </logger>

-    <logger name="board.aop.RequestLoggingAspect" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SLACK" />
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>